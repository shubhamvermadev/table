{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "esnext",
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["./src"],
  "exclude": ["**/*.stories.tsx"]
}

